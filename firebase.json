{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "server.js",
      "package.json",
      "package-lock.json",
      ".env",
      ".github/**",
      ".qodo/**",
      ".vscode/**",
      "netlify/**",
      "functions/**",
      "node_modules/**",
      "*.md",
      "**/.*"
    ],
    "rewrites": [
      {
        "source": "/openrouter",
        "function": "openrouter"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
